<div>
  <div>
    <h1>
      List of all stores
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new store
    </h2>

    <form action="/insert_store" method="post">
      <div>
        <label for="title_box">
          Title
        </label>

        <input type="text" id="title_box" name="query_title">
      </div>

      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description">
      </div>

      <div>
        <label for="location_box">
          Location
        </label>

        <input type="text" id="location_box" name="query_location">
      </div>

      <div>
        <label for="style_box">
          Style
        </label>

        <input type="text" id="style_box" name="query_style">
      </div>

      <button>
        Create store
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>

        <th>
          Title
        </th>

        <th>
          Description
        </th>

        <th>
          Location
        </th>

        <th>
          Style
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_stores.each do |a_store| %>
      <tr>
    

        <td>
          <%= a_store.title %>
        </td>

        <td>
          <%= a_store.description %>
        </td>

        <td>
          <%= a_store.location %>
        </td>

        <td>
          <%= a_store.style %>
        </td>

        <td>
          <%= time_ago_in_words(a_store.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_store.updated_at) %> ago
        </td>

        <td>
          <a href="/stores/<%= a_store.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
